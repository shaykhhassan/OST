#!/bin/bash

if [ "$#" -ne 1 ]; then
    echo "Usage: $0 <input_file>" >&2
    exit 1
fi

input="$1"
base="${input%.*}"
output="${base}.tsv"

max_id=$(awk -F';' 'NR > 1 && $1 ~ /^[0-9]+$/ && $1 > max { max = $1 } END { print max+0 }' "$input")
next_id=$((max_id + 1))

awk -v OFS='\t' -v next_id="$next_id" '
BEGIN {
    FS = ";"
}
{
    for (i = 1; i <= NF; i++) {
        gsub(/\r/, "", $i)            
        gsub(/[^\x00-\x7F]/, "", $i) 
        gsub(/,/, ".", $i)   

        if (NR > 1 && $i == "") {
            $i = 0     
        }
    }

    if (NR == 1) {
        for (i = 1; i <= NF; i++) {
            printf "%s", $i
            if (i < NF) printf OFS
        }
        printf "\n"
        next
    }

    if ($1 == 0 || $1 == "") {
        $1 = next_id++
    }

    if ($1 in seen) {
        next
    }

    seen[$1] = 1

    for (i = 1; i <= NF; i++) {
        printf "%s", $i
        if (i < NF) printf OFS
    }
    printf "\n"
}
' "$input" > "$output"
